{% extends '@SyliusShop/layout.html.twig' %}


{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-10 homebanner-holder">
                <div id="hero">
                    <div id="owl-main" class="owl-carousel owl-inner-nav owl-ui-sm">
                        {{ bitbag_cms_render_block('slid1') }}
                        {{ bitbag_cms_render_block('slid2') }}
                    </div>
                    <!-- /.owl-carousel -->
                </div>
            </div>

            <div class="col-xs-12 col-sm-12 col-md-2">
                <div class="banner-1">
                    {% image 'assets/shop/images/sh/6.jpg' %}
                        <img    src="{{ asset_url }}" alt="" />
                    {% endimage %}
                </div>
                <div class="banner-2">
                    {% image 'assets/shop/images/sh/7.jpg' %}
                        <img    src="{{ asset_url }}" alt="" />
                    {% endimage %}
                </div>
                <div class="banner-2">
                    {% image 'assets/shop/images/sh/8.jpg' %}
                        <img    src="{{ asset_url }}" alt="" />
                    {% endimage %}
                </div>
            </div>

        </div>
    </div>

    <div class="container">
        <br><div class="row">

            <!-- ============================================== CONTENT ============================================== -->
            <div class="col-xs-12 col-sm-12 col-md-12 homebanner-holder">


                <!-- ============================================== INFO BOXES ============================================== -->
                <div class="info-boxes wow fadeInUp">
                    <div class="info-boxes-inner">
                        <div class="row">
                            <div class="col-md-6 col-sm-4 col-lg-4">
                                <div class="info-box">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <i class="icon-wallet icons"></i>
                                            <h4 class="info-box-heading green">money back</h4>
                                        </div>
                                    </div>
                                    <h6 class="text">30 Days Money Back Guarantee</h6>
                                </div>
                            </div>
                            <!-- .col -->

                            <div class="hidden-md col-sm-4 col-lg-4">
                                <div class="info-box">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <i class="icon-paper-plane icons"></i>
                                            <h4 class="info-box-heading green">free shipping</h4>
                                        </div>
                                    </div>
                                    <h6 class="text">Shipping on orders over $99</h6>
                                </div>
                            </div>
                            <!-- .col -->

                            <div class="col-md-6 col-sm-4 col-lg-4">
                                <div class="info-box">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <i class="icon-star icons"></i>
                                            <h4 class="info-box-heading green">Special Sale</h4>
                                        </div>
                                    </div>
                                    <h6 class="text">Extra $5 off on all items </h6>
                                </div>
                            </div>
                            <!-- .col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.info-boxes-inner -->

                </div><br>
                <!-- /.info-boxes -->



                <section class="section featured-product wow fadeInUp">
                    <div class="header-section"><h3 class="section-title"> {{ 'sylius.ui.latest_products'|trans }}</h3></div>
                    <div class="owl-carousel home-owl-carousel custom-carousel owl-theme outer-top-xs">
                        {{ render(url('sylius_shop_partial_product_index_latest', {'count': 8, 'template': '@SyliusShop/Product/_horizontalList.html.twig'})) }}

                    </div>
                    <!-- /.home-owl-carousel -->
                </section>


                {{ render(controller('AppBundle:Category:show')) }}

                <div class="row">
                    <div class="col-md-6">
                        <div class="sidebar-widget newsletter wow fadeInUp outer-bottom-small">
                            <h3 class="section-title">Newsletters</h3>
                            <div class="sidebar-widget-body outer-top-xs">
                                <p>Souscrivez a notre newsletters !</p>
                                <form>
                                    <div class="form-group">
                                        <label class="sr-only" for="exampleInputEmail1">Email address</label>
                                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Souscrivez a notre newsletters !">
                                    </div>
                                    <button class="btn btn-primary">Souscrire</button>
                                </form>
                            </div>
                            <!-- /.sidebar-widget-body -->
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="sidebar-widget  wow fadeInUp outer-top-vs ">
                            <div id="advertisement" class="advertisement">
                                <div class="item">
                                    <div class="avatar">
                                        {% image 'assets/images/testimonials/member1.png' %}
                                            <img    src="{{ asset_url }}" alt="" />
                                        {% endimage %}
                                    </div>
                                    <div class="testimonials"><em>"</em> Vtae sodales aliq uam morbi non sem lacus port mollis. Nunc condime tum metus eud molest sed consectetuer.<em>"</em></div>
                                    <div class="clients_author">John Doe <span>Abc Company</span> </div>
                                    <!-- /.container-fluid -->
                                </div>
                                <!-- /.item -->

                                <div class="item">
                                    <div class="avatar">
                                        {% image 'assets/images/testimonials/member3.png' %}
                                            <img    src="{{ asset_url }}" alt="" />
                                        {% endimage %}
                                    </div>
                                    <div class="testimonials"><em>"</em>Vtae sodales aliq uam morbi non sem lacus port mollis. Nunc condime tum metus eud molest sed consectetuer.<em>"</em></div>
                                    <div class="clients_author">Stephen Doe <span>Xperia Designs</span> </div>
                                </div>
                                <!-- /.item -->

                                <div class="item">
                                    <div class="avatar">
                                        {% image 'assets/images/testimonials/member2.png' %}
                                            <img    src="{{ asset_url }}" alt="" />
                                        {% endimage %}
                                    </div>
                                    <div class="testimonials"><em>"</em> Vtae sodales aliq uam morbi non sem lacus port mollis. Nunc condime tum metus eud molest sed consectetuer.<em>"</em></div>
                                    <div class="clients_author">Saraha Smith <span>Datsun &amp; Co</span> </div>
                                    <!-- /.container-fluid -->
                                </div>
                                <!-- /.item -->

                            </div>
                            <!-- /.owl-carousel -->
                        </div>
                    </div>
                </div>


            </div>
            <!-- /.homebanner-holder -->
            <!-- ============================================== CONTENT : END ============================================== -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
{% endblock %}