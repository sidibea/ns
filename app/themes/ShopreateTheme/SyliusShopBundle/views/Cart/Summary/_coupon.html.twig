<table class="table">
    <thead>
    <tr>
        <th>
            <span class="estimate-title">Discount Code</span>
            <p>Enter your coupon code if you have one..</p>
        </th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>
            <div class="form-group">
                {{ form_widget(form, {'class': 'form-control unicase-form-control text-input', 'attr': {'placeholder': 'sylius.ui.enter_your_code'|trans~'...'}}) }}
            </div>
            <div class="clearfix pull-right">
                <button type="submit" id="sylius-save" class="btn-upper btn btn-primary">{{ 'sylius.ui.apply_coupon'|trans }}</button>
            </div>
            {{ form_errors(form) }}

        </td>
    </tr>
    </tbody><!-- /tbody -->
</table><!-- /table -->

