{% import "@SyliusShop/Common/Macro/money.html.twig" as money %}

{{ sonata_block_render_event('sylius.shop.product.index.before_box', {'product': product}) }}
<div class="item item-carousel">
    <div class="products">
        <div class="product">
            <div class="product-image">
                <div class="image">
                    <a href="{{ path('sylius_shop_product_show', {'slug': product.slug, '_locale': product.translation.locale}) }}">
                        {% include '@SyliusShop/Product/_mainImage.html.twig' with {'product': product} %}
                    </a>
                </div>
                <!-- /.image -->

            </div>
            <!-- /.product-image -->

            <div class="product-info text-left text-center">
                <h3 class="name"><a href="{{ path('sylius_shop_product_show', {'slug': product.slug, '_locale': product.translation.locale}) }}">{{ product.name }}</a></h3>
                <div class="rating rateit-small"></div>
                <div class="description"></div>
                <div class="product-price">
                    {% if not product.variants.empty() %}
                        <span class="price">{{ money.calculatePrice(product|sylius_resolve_variant) }}</span>
                    {% endif %}
                <!-- /.product-price -->

            </div>
            <!-- /.product-info -->
            <div class="cart clearfix animate-effect">
                <div class="action">
                    <ul class="list-unstyled">
                        <li class="add-cart-button btn-group">
                            <a href="{{ path('sylius_shop_product_show', {'slug': product.slug, '_locale': product.translation.locale}) }}" class="btn btn-primary icon" > {{ 'sylius.ui.view_more'|trans }} </a>
                        </li>

                    </ul>
                </div>
                <!-- /.action -->
            </div>
            <!-- /.cart -->
        </div>
        <!-- /.product -->

    </div>
    <!-- /.products -->

</div>
</div>
{{ sonata_block_render_event('sylius.shop.product.index.after_box', {'product': product}) }}